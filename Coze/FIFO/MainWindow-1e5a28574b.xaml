<Window
    x:Class="GoldTradingDesktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="黄金交易系统"
    Width="1200" Height="800"
    Closed="Window_Closed">
    <Grid>
        <!-- 标题栏 -->
        <Grid x:Name="AppTitleBar" Height="48" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Image Source="ms-appx:///Assets/Logo.png" Width="32" Height="32" Margin="16,8"/>
            <TextBlock Text="黄金交易系统" Grid.Column="1" VerticalAlignment="Center" Margin="16,0" 
                       FontSize="18" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimary}"/>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                <TextBlock x:Name="ConnectionStatusIcon" Text="●" FontSize="16" Margin="0,0,8,0"/>
                <TextBlock x:Name="StatusText" Text="就绪" FontSize="14"/>
            </StackPanel>
        </Grid>

        <!-- 主内容区域 -->
        <Grid Margin="0,48,0,0">
            <WebView2 x:Name="WebView" 
                      NavigationStarting="WebView_NavigationStarting"
                      NavigationCompleted="WebView_NavigationCompleted"
                      CoreWebView2Initialized="WebView_CoreWebView2Initialized"/>
            
            <ProgressRing x:Name="LoadingRing" IsActive="True" Visibility="Collapsed" 
                         Width="48" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>